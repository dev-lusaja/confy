.conferences
  %header
    %h1.content-subhead All conferences
  %section.conferences-grid.pure-g-r
    - conferences.each do |conference|
      %article.conference.pure-u-1-3
        .conference-logo
          %a{:href => "/conferences/#{conference.year}/#{conference.short_url}"}
            %img{:title => conference.title, :alt => conference.title, :src => conference.image_url}/
        %header.conference-header
          %h2.conference-title
            %a{:href => "/conferences/#{conference.year}/#{conference.short_url}"}
              #{conference.title}
