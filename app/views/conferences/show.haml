%section.conference.pure-u-1
  %aside.conference-logo.pure-u-1-5
    %img{:title => conference.title, :alt => conference.title, :src => conference.image_url}/
  .conference-description.pure-u-4-5
    %header.conference-header
      %h2.conference-title #{conference.title}
      %p.conference-meta
        - conference.tags.each do |tag|
          %span.conference-tag #{tag}
    %p
      #{conference.description}
    .conference-data
      %span.when
        %i.icon-calendar
        #{date_range(conference.start_date, conference.end_date)}
        |
      %span.where
        %i.icon-map-marker
        %a{href: conference.place_url, title: conference.place, target: 'blank'} #{conference.place}
        |
      %span.who
        %i.icon-twitter
        %a{href: "http://twitter.com/#{conference.twitter}", title: conference.twitter, target: 'blank'}  #{conference.twitter}
        |
      %span.info
        %i.icon-external-link
        %a{href: conference.url, title: conference.title, target: 'blank'} #{url_cropper(conference.url)}

- if conference.talks.count > 0
  %section.talks-grid.pure-g-r
    - conference.talks.each do |talk|
      %article.talk.pure-u-1-2
        .talk-video
          %iframe{:allowfullscreen => "", :frameborder => "0", :height => "282", :mozallowfullscreen => "", :src => video_iframe(talk.video_url), :webkitallowfullscreen => "", :width => "100%"}
        %header.talk-header
          .speaker-avathar
            %img{:title => talk.speaker.name, :alt => talk.speaker.name, :src => talk.speaker.image_url}/
          .info
            %p.speaker-name #{talk.speaker.name}
            %h1.title #{talk.title}
- else
  .alert-info
    There aren't any talks for this conference (yet)